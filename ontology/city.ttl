@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix city: <https://purl.org/taganrog/city#> .

<https://purl.org/taganrog/city> a owl:Ontology ;
  owl:versionInfo "0.0.1" ;
  rdfs:label "City objects ontology"@en ;
  rdfs:label "Онтология исторических объектов города"@ru ;
  rdfs:comment "An RDF schema for historical urban objects, primarily aimed at Taganrog"@en ;
  rdfs:comment "Онтология для концепций городской среды Таганрога в историческом контексте"@ru .

# Definitions

## Classes
city:Object a rdfs:Class ;
  owl:equivalentClass city:Объект .

city:Value a rdfs:Class ;
  owl:equivalentClass city:Значение .

city:Category a rdfs:Class ;
  owl:equivalentClass city:Категория .

## Properties
city:hasCategory a rdfs:Property ;
  rdf:domain city:Object ;
  rdf:range city:Category .

city:hasValue a rdfs:Property ;
  rdf:domain city:Object ;
  rdf:range city:Value .

## Restrictions
city:Object owl:equivalentClass [
    a owl:Restriction ;
    owl:onProperty city:hasValue ;
    owl:cardinality 1
  ] .
